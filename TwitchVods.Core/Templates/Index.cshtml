@using RazorLight
@inherits TemplatePage<TwitchVods.Core.Templates.IndexModel>
<html>
<head>
    <title>Twitch Past Broadcasts</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        a:visited {
            color: #ee5252;
        }
    </style>
</head>
<body>

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Twitch Past Broadcasts</h1>
            <p class="lead">Complete past broadcasts listing pages are available for the following channels:</p>
        </div>
    </div>

    <div class="container">
        <div class="list-group">
            @foreach (var channel in Model.Channels.OrderBy(x => x))
            {
                <a href="/v/@(channel.ToLower()).html" class="list-group-item">
                    <h4>@channel</h4>
                </a>
            }
        </div>
    </div>
</body>
</html>